<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Video_Player">


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#000"
        android:layout_height="wrap_content">

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:id="@+id/video_player"/>

    </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:background="#000"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/white_knight"
                            android:id="@+id/t1"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="18sp"
                            android:paddingStart="10dp"
                            tools:ignore="RtlSymmetry" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_below="@+id/t1"
                            android:id="@+id/t2"
                            android:paddingStart="10dp"
                            android:layout_height="wrap_content"
                            android:text="@string/_2022_documentry_drama_hindi"
                            android:textSize="17sp"
                            android:textColor="#fff"
                            tools:ignore="RtlSymmetry" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:paddingTop="10dp"
                            android:paddingStart="10dp"
                            android:layout_below="@+id/t2"
                            android:id="@+id/desc"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlSymmetry">
                            <TextView
                                android:layout_width="match_parent"
                                android:textColor="#fff"
                                android:textAlignment="viewStart"
                                android:text="@string/description"
                                android:layout_height="wrap_content"
                                android:id="@+id/t3"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_below="@+id/desc"
                            android:id="@+id/tworow"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_below="@+id/t2"
                                android:paddingHorizontal="30dp"
                                android:id="@+id/thirdrow"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/add"
                                    android:paddingTop="10dp"
                                    android:id="@+id/im1"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_below="@+id/im1"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Watchlist"

                                    android:paddingTop="5dp"
                                    android:textColor="#fff"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_below="@+id/t2"
                                android:paddingHorizontal="30dp"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/play"
                                    android:paddingTop="10dp"
                                    android:id="@+id/im2"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_below="@+id/im1"
                                    android:layout_height="wrap_content"
                                    android:text="@string/trailer"
                                    android:paddingTop="5dp"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="#fff"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_below="@+id/t2"
                                android:paddingHorizontal="30dp"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/share"
                                    android:paddingTop="10dp"
                                    android:id="@+id/share"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_below="@+id/im1"
                                    android:layout_height="wrap_content"
                                    android:text="Share"
                                    android:paddingTop="5dp"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="#fff"
                                    />

                            </LinearLayout>

                        </LinearLayout>
                        <!--                        <LinearLayout-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:orientation="vertical"-->
                        <!--                            android:paddingStart="1dp"-->
                        <!--                            android:id="@+id/four"-->
                        <!--                            android:layout_below="@+id/tworow"-->
                        <!--                            android:paddingTop="20dp"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            tools:ignore="NotSibling,RtlSymmetry">-->
                        <!--                            <ImageView-->
                        <!--                                android:layout_width="match_parent"-->
                        <!--                                android:layout_height="2dp"-->
                        <!--                                android:background="@color/white" />-->
                        <!--                        </LinearLayout>-->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="More Videos : "
                            android:textSize="15sp"
                            android:textColor="#ffffff"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:paddingTop="15dp"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:id="@+id/rv"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </LinearLayout>


        </ScrollView>
</LinearLayout>